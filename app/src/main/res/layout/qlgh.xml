<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/qlgh_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:background="@drawable/back_3"
        android:padding="5dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="GIỎ HÀNG"
            android:textStyle="bold"
            android:textSize="30dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:gravity="fill_vertical"
            android:textColor="#000000"
            android:layout_marginTop="10dp"
            android:background="@drawable/back_3"/>
    </androidx.appcompat.widget.Toolbar>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:background="@drawable/tabbar"
        android:padding="5dp"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lvCart"
                android:layout_width="match_parent"
                android:layout_height="600dp" />
        </LinearLayout>
    </ScrollView>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <Button
            android:id="@+id/btXoaDH"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button4"
            android:padding="15dp"
            android:drawableStart="@drawable/clear_cart"
            android:text="Xóa đơn hàng"
            android:textSize="12dp"
            android:textStyle="bold" />
        <Button
            android:id="@+id/btMuaHang"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button1"
            android:drawableStart="@drawable/buy"
            android:padding="15dp"
            android:text="Mua hàng"
            android:textColor="#000000"
            android:textSize="12dp"
            android:textStyle="bold" />
    </TableRow>

</LinearLayout>