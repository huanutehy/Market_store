<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/button1"
    android:orientation="vertical">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_addtocart"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:padding="5dp"
            app:srcCompat="@drawable/account_icon" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvProdName_addtocart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Tên"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPrice_addtocart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Giá"
                android:textColor="#000000"
                android:textSize="18dp"
                android:textStyle="bold" />

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvQuantity_addtocart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nhập số lượng:"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:padding="5dp"/>

                <EditText
                    android:id="@+id/etQuantity_addtocart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#A9ECE9E9"
                    android:ems="10"
                    android:inputType="number"
                    android:textColor="#000000"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:padding="5dp"/>
            </TableRow>
        </LinearLayout>

    </TableRow>

    <Button
        android:id="@+id/btConfirm_addtocart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:background="@drawable/button1"
        android:padding="5dp"
        android:text="Xác nhận"
        android:textColor="#000000" />
</LinearLayout>