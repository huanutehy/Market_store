<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ctuser_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:background="@drawable/back_2">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TÀI KHOẢN"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:padding="10dp"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button1"
        android:orientation="vertical"
        android:padding="10dp"
        android:gravity="center_vertical">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvUser_ctuser"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:gravity="right|center"
                android:text="Tên tài khoản:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/etUserName_ctuser"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="#F4F4F4"
                android:gravity="left|center"
                android:textColor="#000000"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvPw_ctuser"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:gravity="right|center"
                android:text="Mật khẩu:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/etPassword_ctuser"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="#F4F4F4"
                android:drawableEnd="@drawable/rewrite_icon"
                android:gravity="left|center"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvHoten_ctuser"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:gravity="right|center"
                android:text="Họ tên:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/etHoten_ctuser"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="#F4F4F4"
                android:drawableEnd="@drawable/rewrite_icon"
                android:gravity="left|center"
                android:textColor="#000000"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvNgaysinh_ctuser"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:gravity="right|center"
                android:text="Ngày sinh:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/etNgaysinh_ctuser"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="#F4F4F4"
                android:drawableEnd="@drawable/rewrite_icon"
                android:gravity="left|center"
                android:textColor="#000000"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvEmail_ctuser"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:gravity="right|center"
                android:text="Email:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/etEmail_ctuser"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="#F4F4F4"
                android:drawableEnd="@drawable/rewrite_icon"
                android:gravity="left|center"
                android:textColor="#000000"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvDiachi_ctuser"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:gravity="right|center"
                android:text="Địa chỉ:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/etDiachi_ctuser"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="#F4F4F4"
                android:drawableEnd="@drawable/rewrite_icon"
                android:gravity="left|center"
                android:textColor="#000000"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvCMT_ctuser"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:gravity="right|center"
                android:text="Số CMT/CCCD:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/etCMT_ctuser"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="#F4F4F4"
                android:drawableEnd="@drawable/rewrite_icon"
                android:gravity="left|center"
                android:textColor="#000000"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvSDT_ctuser"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:gravity="right|center"
                android:text="Số điện thoại:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/etSDT_ctuser"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="#F4F4F4"
                android:drawableEnd="@drawable/rewrite_icon"
                android:gravity="left|center"
                android:textColor="#000000"
                android:textSize="18dp" />
        </TableRow>
    </LinearLayout>

        <Button
            android:id="@+id/btHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button5"
            android:text="Lịch sử mua hàng"
            android:textSize="18dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:textColor="#000000"
            android:layout_marginVertical="5dp"/>

        <Button
            android:id="@+id/btLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/button4"
            android:text="Đăng xuất"
            android:textSize="18dp"
            android:textStyle="bold"
            android:padding="5dp"
            android:layout_marginVertical="5dp"/>

</LinearLayout>