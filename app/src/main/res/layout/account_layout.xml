<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:id="@+id/btMoreAccount"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:backgroundTintMode="add"
        android:drawableEnd="@drawable/forward_icon_1"
        android:background="@drawable/back_2"
        android:drawablePadding="15dp"
        android:text="Name"
        android:drawableStart="@drawable/account_icon"
        android:textStyle="bold"
        android:textSize="20dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="fill_vertical"
        android:textColor="#000000"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btQLGH"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="GIỎ HÀNG"
        android:textStyle="bold"
        android:textSize="20dp"
        android:drawableStart="@drawable/cart_icon"
        android:drawablePadding="15dp"
        android:drawableEnd="@drawable/forward_icon_1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="fill_vertical"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_3"/>

    <Button
        android:id="@+id/btStatistic"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="THỐNG KÊ"
        android:textStyle="bold"
        android:textSize="20dp"
        android:drawableStart="@drawable/statistic_icon"
        android:drawablePadding="15dp"
        android:drawableEnd="@drawable/forward_icon_1"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:gravity="fill_vertical"
        android:textColor="#000000"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_1"
        android:visibility="invisible"/>

</LinearLayout>