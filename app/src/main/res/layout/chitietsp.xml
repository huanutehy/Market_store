<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ctsp_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:background="@drawable/button1"
        android:padding="5dp">
        <TextView
            android:id="@+id/tvProdName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:text="Tên sp"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold" />
    </androidx.appcompat.widget.Toolbar>
    <TabHost
        android:id="@+id/tabHost_detail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_1"
        android:theme="@style/TabWidgetTheme">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TabWidget
                android:id="@android:id/tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <FrameLayout
                android:id="@android:id/tabcontent"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/tab1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/tabbar"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/back_1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/img_ctsp"
                                    android:layout_width="150dp"
                                    android:layout_height="match_parent"
                                    android:padding="5dp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_margin="5dp">

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/tvP"
                                        android:layout_width="90dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:gravity="right"
                                        android:text="Giá:"
                                        android:textColor="#000000"
                                        android:textSize="15dp" />

                                    <TextView
                                        android:id="@+id/tvPrice_ctsp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:gravity="left"
                                        android:background="#54DDDDDD"
                                        android:textColor="#000000"
                                        android:textSize="15dp" />
                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/tvN"
                                        android:layout_width="90dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:gravity="right"
                                        android:text="NSX:"
                                        android:textColor="#000000"
                                        android:textSize="15dp" />

                                    <TextView
                                        android:id="@+id/tvNSX_ctsp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:gravity="left"
                                        android:background="#54DDDDDD"
                                        android:textColor="#000000"
                                        android:textSize="15dp" />
                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/tvCT"
                                        android:layout_width="90dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:gravity="right"
                                        android:text="Chi tiết:"
                                        android:textColor="#000000"
                                        android:textSize="15dp" />

                                    <TextView
                                        android:id="@+id/tvChitiet_ctsp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:gravity="left"
                                        android:background="#54DDDDDD"
                                        android:textColor="#000000"
                                        android:textSize="15dp" />
                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/tvK"
                                        android:layout_width="90dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:gravity="right"
                                        android:text="Khuyến mại:"
                                        android:textColor="#000000"
                                        android:textSize="15dp" />

                                    <TextView
                                        android:id="@+id/tvKM_ctsp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:gravity="left"
                                        android:background="#54DDDDDD"
                                        android:textColor="#000000"
                                        android:textSize="15dp" />
                                </TableRow>

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/tvB"
                                        android:layout_width="90dp"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:gravity="right"
                                        android:text="Bảo hành:"
                                        android:textColor="#000000"
                                        android:textSize="15dp" />

                                    <TextView
                                        android:id="@+id/tvBH_ctsp"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="5dp"
                                        android:gravity="left"
                                        android:background="#54DDDDDD"
                                        android:textColor="#000000"
                                        android:textSize="15dp" />
                                </TableRow>
                            </LinearLayout>

                        </LinearLayout>

                        <ScrollView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/back_1"
                                android:orientation="vertical">

                                <TableRow
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/button1"
                                    android:padding="10dp"
                                    android:gravity="center">

                                    <TextView
                                        android:id="@+id/tvRating"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:textColor="#000000"
                                        android:textColorHint="#000000"
                                        android:textSize="25dp"
                                        android:backgroundTint="#A7FFEB"
                                        android:layout_marginHorizontal="20dp"
                                        android:gravity="center"/>

                                    <com.taufiqrahman.reviewratings.RatingReviews
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/ratingReview">

                                    </com.taufiqrahman.reviewratings.RatingReviews>
                                </TableRow>

                                <Button
                                    android:id="@+id/btSpecification"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/button3"
                                    android:padding="10dp"
                                    android:text="Thông số kỹ thuật"
                                    android:drawablePadding="5dp"
                                    android:textColor="#FFFFFF"
                                    android:textSize="18dp"
                                    android:textStyle="bold"
                                    android:layout_gravity="center"
                                    android:drawableStart="@drawable/hand_right"/>

                                <TextView
                                    android:id="@+id/tvReview"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:text="REVIEW ở đây"
                                    android:textColor="#000000"
                                    android:padding="10dp"
                                    android:textSize="18dp"
                                    android:background="@drawable/back_3"/>

                                <com.google.android.material.floatingactionbutton.FloatingActionButton
                                    android:id="@+id/fab_comment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="end|bottom"
                                    android:layout_margin="16dp"
                                    android:src="@drawable/chat_icon" />
                            </LinearLayout>
                        </ScrollView>

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/tab2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <WebView
                        android:id="@+id/webView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />
                </LinearLayout>
            </FrameLayout>
        </LinearLayout>
    </TabHost>



</LinearLayout>