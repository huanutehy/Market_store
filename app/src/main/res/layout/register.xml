<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/reg_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        android:background="@drawable/back_3">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ĐĂNG KÝ TÀI KHOẢN"
            android:textColor="#000000"
            android:textSize="30dp"
            android:textStyle="bold"
            android:padding="10dp"/>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button1"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:padding="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvUser_reg"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:gravity="right|center"
                android:text="Tên tài khoản:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/etUserName_reg"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="#F4F4F4"
                android:ems="10"
                android:gravity="left|center"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvPw_reg"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:gravity="right|center"
                android:text="Mật khẩu:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/etPassword_reg"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="#F4F4F4"
                android:ems="10"
                android:gravity="left|center"
                android:inputType="textPassword"
                android:textColor="#000000"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvHoten_reg"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:gravity="right|center"
                android:text="Họ tên:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/etHoten_reg"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="#F4F4F4"
                android:ems="10"
                android:gravity="left|center"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvNgaysinh_reg"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:gravity="right|center"
                android:text="Ngày sinh:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/etNgaysinh_reg"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="#F4F4F4"
                android:gravity="left|center"
                android:textColor="#000000"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvEmail_reg"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:gravity="right|center"
                android:text="Email:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/etEmail_reg"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="#F4F4F4"
                android:ems="10"
                android:gravity="left|center"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvDiachi_reg"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:gravity="right|center"
                android:text="Địa chỉ:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/etDiachi_reg"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="#F4F4F4"
                android:ems="10"
                android:gravity="left|center"
                android:inputType="textPersonName"
                android:textColor="#000000"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvCMT_reg"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:gravity="right|center"
                android:text="Số CMT/CCCD:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/etCMT_reg"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="#F4F4F4"
                android:ems="10"
                android:gravity="left|center"
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:textSize="18dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

            <TextView
                android:id="@+id/tvSDT_reg"
                android:layout_width="130dp"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:gravity="right|center"
                android:text="Số điện thoại:"
                android:textColor="#000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/etSDT_reg"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_margin="5dp"
                android:background="#F4F4F4"
                android:ems="10"
                android:gravity="left|center"
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:textSize="18dp" />
        </TableRow>
    </LinearLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp">

        <Button
            android:id="@+id/btRegister_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button2"
            android:padding="15dp"
            android:text="Đăng ký"
            android:textSize="20dp"
            android:textStyle="bold" />
    </TableRow>

</LinearLayout>